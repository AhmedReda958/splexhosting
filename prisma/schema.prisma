generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  firstName     String?
  lastName      String?
  email         String    @unique
  password      String
  phoneNumber   String?
  role          String    @default("user")
  credits       Int       @default(0)
  emailVerified DateTime?
  status        String    @default("active")
  lastLogin     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  servers       Server[]
}

model Server {
  id         Int      @id @default(autoincrement())
  userId     Int
  type       String  @default("vps")
  name       String?
  ip4        String
  ip6        String?
  ram        Int?
  cpu       String?
  cores      Int?
  storage    Int?
  operating  String?
  productName String? @default("custom")
  status     String   @default("active")
  createdAt  DateTime @default(now())
  expiresAt  DateTime?
  user       User     @relation(fields: [userId], references: [id])
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  features    String[]
  price       Int
  type       String   @default("vps")
  cpu         String?
  cores       Int?
  ram         Int?
  storage     Int?
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}